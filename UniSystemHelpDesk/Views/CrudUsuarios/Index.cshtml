@model IEnumerable<UniSystemHelpDesk.Models.US_USUARIOS>

@{
    ViewBag.Title = "Index";
}

<h2>Cadastra Usuário</h2>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            @Html.ActionLink("Voltar", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("Novo Cadastro", "Create", "CrudUsuarios", new { area = "" }, new { @class = "navbar-brand" })
        </div>
    </div>
</div>
<table class="table table-l">
    <tr>
        <th>
            @Html.DisplayName("Nome Usuário")
        </th>
        <th>
            @Html.DisplayName("Login")
        </th>
        <th>
            @Html.DisplayName("Setor")
        </th>
        <th>
            @Html.DisplayName("Tipo Usuário")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NOME_USUARIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMAIL_USUARIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.US_SETORES.SETOR)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.US_TIPO_USUARIO.TIPO_USUARIO)
            </td>
            <td>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fas fa-edit icons-espa"></i>
                    </span>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID_USUARIOS })
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fas fa-search-plus icons-espa"></i>
                    </span>
                    @Html.ActionLink("Detalhes", "Details", new { id = item.ID_USUARIOS })
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fas fa-trash-alt icons-espa"></i>
                    </span>
                    @Html.ActionLink("Deletar", "Delete", new { id = item.ID_USUARIOS })
                </div>
            </td>
        </tr>
    }

</table>
